class Solution {
  public:
    int maxSubarraySum(vector<int> &arr) {
        int current_sum = arr[0];
        int max_sum = arr[0];
        int n = arr.size();

        for (int i = 1; i < n; i++) {
            current_sum = max(arr[i], current_sum + arr[i]);
            max_sum = max(max_sum, current_sum);
        }

        return max_sum;
    }
};
