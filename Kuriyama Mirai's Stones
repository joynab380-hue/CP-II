#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int n;
    cin >> n;
    vector<long long> v(n + 1), u(n + 1);

    for (int i = 1; i <= n; i++)
    {
        cin >> v[i];
        u[i] = v[i];
    }

    sort(u.begin() + 1, u.end());

    vector<long long> prefV(n + 1, 0), prefU(n + 1, 0);
    for (int i = 1; i <= n; i++)
    {
        prefV[i] = prefV[i - 1] + v[i];
        prefU[i] = prefU[i - 1] + u[i];
    }
    int m;
    cin >> m;
    while (m--)
    {
        int type, l, r;
        cin >> type >> l >> r;
        if (type == 1)
            cout << prefV[r] - prefV[l - 1] << endl;
        else
            cout << prefU[r] - prefU[l - 1] << endl;
    }
    return 0;
}
